<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h5"
    android:orientation="horizontal"

    android:overScrollMode="never"
    tools:context=".HomePage">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:clickable="false"
        android:text="Cvify"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b2"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/b1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Cover Letter"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:clickable="true" />

    <Button
        android:id="@+id/b1"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Create Resume"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:clickable="true" />

    <Button
        android:id="@+id/b3"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/b1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Downloads"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Interview Ques"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/b1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_bg"

        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Rate Us"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/dim_foreground_dark_disabled"
        android:text="Invite Friends"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:layout_width="155dp" />
</RelativeLayout>